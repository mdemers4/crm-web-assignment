<h1>All Contacts</h1>
<div class = 'listed_contact'>
	<table style = 'width:70%'>
		<tr>
		    <th>First Name</th>
		    <th>Last Name</th>
		    <th>email</th>
		    <th>note</th>
		</tr>

		<tr>
			<% Contact.all.each do |contact| %>
			<th>
			<a href = '/contacts/<%= contact.id %>'> 
		  <%= contact.first_name %> </th>
		  <th><%= contact.last_name %></th>
		  <th><%= contact.email %></th>
		  <th><%= contact.note %></th>
		  </a>

		  <th>
		  	<a href = '/contacts/edit/<%= contact.id %>'>
		  		<img src="https://cdn1.iconfinder.com/data/icons/turbo-outline/50/Edit-128.png" width="20px"/>
		  	</a>
		  </th>

		  </tr>
		<% end %>
		
	</table>


</div>

<a href="/">Return to main</a>
